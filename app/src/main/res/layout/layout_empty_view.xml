<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dimen_36dp">

    <ImageView
        android:id="@+id/emptyImage"
        android:layout_width="@dimen/dimen_56dp"
        android:layout_height="@dimen/dimen_56dp"
        android:tint="@color/default_circle_indicator_page_color"
        android:src="@drawable/deals_gray" />

    <TextView
        android:id="@+id/emptyTextView"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_height="wrap_content"
        android:text="@string/txt_no_barber_found"
        android:textSize="@dimen/tv_header_title_font" />


    <TextView
        android:id="@+id/emptyButton"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_height="wrap_content"
        android:text="@string/refresh"
        android:textColor="@color/colorAccent"
        android:paddingTop="@dimen/dimen_8dp"
        android:paddingBottom="@dimen/dimen_8dp"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:background="@drawable/bg_blue_bordered_rounded_5"
        android:textSize="@dimen/tv_header_title_font" />

</LinearLayout>