<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRate"
    android:layout_marginLeft="@dimen/dimen_1dp"
    android:layout_marginRight="@dimen/dimen_1dp"
    android:layout_marginTop="@dimen/dimen_1dp"
    android:layout_marginBottom="@dimen/dimen_1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_e6e6e8">

        <RelativeLayout
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_1dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/tv_setting"
                android:layout_centerVertical="false"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:text="@string/txt_rate"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDetail"
                style="@style/tv_setting"
                android:layout_width="match_parent"
                android:layout_below="@+id/tvTitle"
                android:layout_centerVertical="false"
                android:layout_marginBottom="@dimen/dimen_4dp"
                android:layout_toLeftOf="@+id/rlAction"
                android:paddingLeft="@dimen/login_et_login_padding"
                android:singleLine="false"
                android:text="@string/txt_rate_detail"
                android:textSize="@dimen/login_tv_forgot_font" />

            <RelativeLayout
                android:id="@+id/rlAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvTitle"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/setting_layout_view_padding_bottom">

                <TextView
                    android:id="@+id/tvAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_blue_bordered_rounded_5"
                    android:paddingBottom="@dimen/dimen_4dp"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:text="@string/txt_review"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/login_et_login_font"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/llAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivAccept"
                        android:layout_width="@dimen/setting_ll_separator_fb_margin_left"
                        android:layout_height="@dimen/setting_ll_separator_fb_margin_left"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:layout_marginRight="@dimen/dimen_4dp"
                        android:src="@drawable/checkmarkn" />

                    <ImageView
                        android:id="@+id/ivClear"
                        android:layout_width="@dimen/setting_ll_separator_fb_margin_left"
                        android:layout_height="@dimen/setting_ll_separator_fb_margin_left"
                        android:layout_centerVertical="true"
                        android:src="@drawable/nope" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <include
            android:id="@+id/rlBottom"
            layout="@layout/item_complete_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlTop"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>