<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/ivUserPic"
        android:layout_width="@dimen/sloting_img_icon_height"
        android:layout_height="@dimen/sloting_img_icon_height"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/setting_ic_arrow_size_height"
        android:layout_marginLeft="@dimen/setting_ic_arrow_size_height"
        android:layout_marginRight="@dimen/setting_ic_arrow_size_height"
        android:layout_marginTop="@dimen/setting_ic_arrow_size_height"
        android:src="@drawable/user"
        app:siBorderColor="@color/color_gray"
        app:siBorderWidth="1dp" />

    <LinearLayout
        android:id="@+id/llDetail"
        android:layout_margin="@dimen/dimen_4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/ivAccept"
        android:gravity="center"
        android:layout_toRightOf="@+id/ivUserPic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/setting_ic_arrow_size_height"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Loading.."
            android:textColor="@color/c_2c2c2c"
            android:textSize="@dimen/login_et_login_font" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/setting_ic_arrow_size_height"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Time:.."
            android:textColor="@color/c_2c2c2c"
            android:textSize="@dimen/login_tv_forgot_font" />

        <TextView
            android:id="@+id/tvOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/setting_ic_arrow_size_height"
            android:text="Order :"
            android:textColor="@color/c_2c2c2c"
            android:textSize="@dimen/login_tv_forgot_font" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivClear"
        android:layout_width="@dimen/setting_ll_separator_fb_margin_left"
        android:layout_height="@dimen/setting_ll_separator_fb_margin_left"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_4dp"
        android:layout_marginRight="@dimen/dimen_4dp"
        android:src="@drawable/nope" />

    <ImageView
        android:id="@+id/ivReschedule"
        android:layout_width="@dimen/setting_ll_separator_fb_margin_left"
        android:layout_height="@dimen/setting_ll_separator_fb_margin_left"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ivClear"
        android:layout_marginLeft="@dimen/dimen_4dp"
        android:layout_marginRight="@dimen/dimen_4dp"
        android:src="@drawable/other_time" />

    <ImageView
        android:id="@+id/ivAccept"
        android:layout_width="@dimen/setting_ll_separator_fb_margin_left"
        android:layout_height="@dimen/setting_ll_separator_fb_margin_left"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ivReschedule"
        android:layout_marginLeft="@dimen/dimen_4dp"
        android:layout_marginRight="@dimen/dimen_4dp"
        android:src="@drawable/checkmarkn" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/llDetail"
        android:layout_marginLeft="@dimen/login_et_login_padding"
        android:background="@color/c_e6e6e8" />
</RelativeLayout>