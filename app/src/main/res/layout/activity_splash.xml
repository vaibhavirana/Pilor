<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_frontpage"
    tools:context="com.barodacoder.pilor.SplashActivity">

    <ImageView
        android:id="@+id/imgBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/login_iv_logo_size_width"
        android:layout_height="@dimen/login_iv_logo_size_width"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/landing_iv_logo_size_width"
        android:layout_marginBottom="@dimen/login_et_login_padding"
        android:src="@drawable/login_logo" />

    <ImageView
        android:id="@+id/ivTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivLogo"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/login_et_login_padding"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:src="@drawable/front_page_logo" />


</RelativeLayout>
