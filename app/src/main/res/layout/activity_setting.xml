<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/action_bar_bg"
        app:popupTheme="@style/AppTheme.PopupOverlay">


        <TextView
            android:id="@+id/tvBack"
            style="@style/tv_header_title"
            android:text="" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/tv_header_title"
            android:gravity="center"
            android:text="@string/txt_setting" />

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/login_et_login_padding">

            <View style="@style/separator_horizontal_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/login_et_login_padding">

                <RelativeLayout
                    android:id="@+id/rlMyProfile"
                    style="@style/rl_setting_view">

                    <TextView
                        android:id="@+id/tvMyProfile"
                        style="@style/tv_setting"
                        android:text="@string/txt_your_profile" />

                    <ImageView
                        style="@style/iv_arrow_nect"
                        android:src="@drawable/icon_next_grey" />
                </RelativeLayout>

                <View
                    android:id="@+id/viewChangePass"
                    style="@style/separator_horizontal_gray" />

                <RelativeLayout
                    android:id="@+id/rlRadius"
                    style="@style/rl_setting_view">

                    <TextView
                        android:id="@+id/tvRedius"
                        style="@style/tv_setting"
                        android:layout_width="wrap_content"
                        android:text="@string/txt_redius" />

                    <SeekBar
                        android:id="@+id/sbRedius"
                        android:progress="30"
                        android:max="500"
                        android:layout_toRightOf="@+id/tvRedius"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>

            <View
                style="@style/separator_horizontal_gray"
                android:layout_marginBottom="@dimen/setting_ic_arrow_size_width" />

            <View style="@style/separator_horizontal_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/login_et_login_padding">

                <RelativeLayout
                    android:id="@+id/rlPin"
                    style="@style/rl_setting_view">

                    <TextView
                        android:id="@+id/tvPassword"
                        style="@style/tv_setting"
                        android:text="@string/txt_change_pin" />

                    <ImageView
                        style="@style/iv_arrow_nect"
                        android:src="@drawable/icon_next_grey" />
                </RelativeLayout>

                <View
                    android:id="@+id/viewChangePass1"
                    style="@style/separator_horizontal_gray" />

                <RelativeLayout
                    android:id="@+id/rlPaymentCard"
                    style="@style/rl_setting_view">

                    <TextView
                        android:id="@+id/tvPaymentCard"
                        style="@style/tv_setting"
                        android:text="@string/txt_payment_card" />

                    <ImageView
                        style="@style/iv_arrow_nect"
                        android:src="@drawable/icon_next_grey" />
                </RelativeLayout>

            </LinearLayout>


            <View
                style="@style/separator_horizontal_gray"
                android:layout_marginBottom="@dimen/setting_ic_arrow_size_width" />

            <View style="@style/separator_horizontal_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/login_et_login_padding">

                <RelativeLayout
                    android:id="@+id/rlHairCutterSignup"
                    style="@style/rl_setting_view">

                    <TextView
                        android:id="@+id/tvHairCutterSignup"
                        style="@style/tv_setting"
                        android:text="@string/txt_hair_cutter_signup" />

                    <ImageView
                        style="@style/iv_arrow_nect"
                        android:src="@drawable/icon_next_grey" />
                </RelativeLayout>

            </LinearLayout>

            <View
                style="@style/separator_horizontal_gray"
                android:layout_marginBottom="@dimen/setting_ic_arrow_size_width" />

            <View style="@style/separator_horizontal_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/login_et_login_padding">


                <RelativeLayout
                    android:id="@+id/rlRecommendUs"
                    style="@style/rl_setting_view">

                    <TextView
                        android:id="@+id/tvRecommendUs"
                        style="@style/tv_setting"
                        android:text="@string/txt_recommendus" />

                    <ImageView
                        style="@style/iv_arrow_nect"
                        android:src="@drawable/icon_next_grey" />
                </RelativeLayout>

                <View style="@style/separator_horizontal_gray" />

                <RelativeLayout
                    android:id="@+id/rlTerms"
                    style="@style/rl_setting_view">

                    <TextView
                        android:id="@+id/tvTerms"
                        style="@style/tv_setting"
                        android:text="@string/txt_terms" />

                    <ImageView
                        style="@style/iv_arrow_nect"
                        android:src="@drawable/icon_next_grey" />
                </RelativeLayout>

                <View style="@style/separator_horizontal_gray" />

                <RelativeLayout
                    android:id="@+id/rlFaq"
                    style="@style/rl_setting_view">

                    <TextView
                        android:id="@+id/tvFaq"
                        style="@style/tv_setting"
                        android:text="@string/txt_faq" />

                    <ImageView
                        style="@style/iv_arrow_nect"
                        android:src="@drawable/icon_next_grey" />
                </RelativeLayout>

                <View style="@style/separator_horizontal_gray" />

                <RelativeLayout
                    android:id="@+id/rlContactUs"
                    style="@style/rl_setting_view">

                    <TextView
                        android:id="@+id/tvContactUs"
                        style="@style/tv_setting"
                        android:text="@string/txt_contact_us" />

                    <ImageView
                        style="@style/iv_arrow_nect"
                        android:src="@drawable/icon_next_grey" />
                </RelativeLayout>

                <View style="@style/separator_horizontal_gray" />
            </LinearLayout>

            <View
                style="@style/separator_horizontal_gray"
                android:layout_marginBottom="@dimen/setting_ic_arrow_size_width" />

            <View style="@style/separator_horizontal_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/login_et_login_padding">


                <RelativeLayout
                    android:id="@+id/rlSignout"
                    style="@style/rl_setting_view">

                    <TextView
                        android:id="@+id/tvSignout"
                        style="@style/tv_setting"
                        android:text="@string/txt_sign_out" />

                    <ImageView
                        style="@style/iv_arrow_nect"
                        android:src="@drawable/icon_next_grey" />
                </RelativeLayout>

            </LinearLayout>

            <View style="@style/separator_horizontal_gray" />

            <ImageView
                style="@style/iv_arrow_nect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/setting_layout_view_padding_bottom"
                android:src="@drawable/dark_logo" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>