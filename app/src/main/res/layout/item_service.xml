<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llService"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_2dp"
    >

    <RelativeLayout
        android:id="@+id/rlMyProfile"
        style="@style/rl_setting_view"
        android:background="@null"
        android:padding="4dp">

        <TextView
            android:id="@+id/tvServiceTitle"
            style="@style/tv_setting"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:text="@string/txt_your_profile" />

        <TextView
            android:id="@+id/tvPrice"
            style="@style/tv_setting"
            android:layout_width="wrap_content"
            android:text="@string/txt_price"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_toStartOf="@+id/imgSelect"
            android:layout_alignTop="@+id/imgSelect" />

        <ImageView
            android:id="@+id/imgSelect"
            style="@style/iv_arrow_nect"
            android:paddingRight="@dimen/dimen_4dp"
            android:clickable="true"
            android:layout_width="@dimen/landing_iv_logo_margin_bottom"
            android:layout_alignParentRight="true"
            android:src="@drawable/checkmark_unselected"
            />
    </RelativeLayout>

    <View
        android:id="@+id/viewChangePass"
        style="@style/separator_horizontal_gray" />
</LinearLayout>