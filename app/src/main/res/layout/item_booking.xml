<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_selector"
    android:layout_marginBottom="0.5dp"
    android:layout_marginTop="0.5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_et_login_padding">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/tv_setting"
            android:layout_centerVertical="false"
            android:text="@string/txt_rate"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDetail"
            style="@style/tv_setting"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_centerVertical="false"
            android:layout_toLeftOf="@+id/tvAction"
            android:paddingLeft="@dimen/login_et_login_padding"
            android:singleLine="false"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:text="@string/txt_rate_detail"
            android:textSize="@dimen/login_tv_forgot_font" />

        <TextView
            android:id="@+id/tvAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/setting_ic_arrow_size_height"
            android:text="@string/txt_review"
            android:paddingTop="@dimen/dimen_4dp"
            android:paddingBottom="@dimen/dimen_4dp"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp"
            android:background="@drawable/bg_blue_bordered_rounded_5"
            android:textColor="@color/c_2c2c2c"
            android:textSize="@dimen/login_et_login_font" />
    </RelativeLayout>

</android.support.v7.widget.CardView>