<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/ivUserPic"
            android:layout_width="@dimen/sloting_img_icon_height"
            android:layout_height="@dimen/sloting_img_icon_height"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/setting_ic_arrow_size_height"
            android:layout_marginLeft="@dimen/setting_ic_arrow_size_height"
             android:layout_marginTop="@dimen/setting_ic_arrow_size_height"
            android:src="@drawable/user"
            app:siBorderColor="@color/color_gray"
            app:siBorderWidth="1dp" />

        <LinearLayout
            android:id="@+id/llDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_4dp"
            android:layout_toLeftOf="@+id/tvAction"
            android:layout_toRightOf="@+id/ivUserPic"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/setting_ic_arrow_size_height"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Loading.."
                android:textColor="@color/c_2c2c2c"
                android:textSize="@dimen/login_et_login_font" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/setting_ic_arrow_size_height"
                android:text="Time:.."
                android:textColor="@color/c_2c2c2c"
                android:textSize="@dimen/login_tv_forgot_font" />

            <TextView
                android:id="@+id/tvOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/setting_ic_arrow_size_height"
                android:text="Order :"
                android:textColor="@color/c_2c2c2c"
                android:textSize="@dimen/login_tv_forgot_font" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/setting_ic_arrow_size_height"
            android:background="@drawable/bg_blue_bordered_rounded_5"
            android:paddingBottom="@dimen/dimen_4dp"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_4dp"
            android:text="@string/txt_mark_as_done"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/login_tv_forgot_font" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/llDetail"
            android:layout_marginLeft="@dimen/login_et_login_padding"
            android:background="@color/c_e6e6e8" />
    </RelativeLayout>
</android.support.v7.widget.CardView>